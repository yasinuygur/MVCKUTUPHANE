@model MVCKUTUPHANE.Models.Entity.TBLHAREKET
@{
	ViewBag.Title = "OduncVer";
	Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
	<div style="margin-top:15px">
		<label>Üye</label>
		@Html.DropDownListFor(k=>k.TBLUYE.ID,(List<SelectListItem>)ViewBag.dgr1, new {@class="form-control"})
	</div>
	<div style="margin-top:15px">
		<label>Kitap</label>
		@Html.DropDownListFor(k => k.TBLKITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Personel</label>
		@Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
	</div>
	<div style="margin-top:15px">
		<label>Kitap Alış Tarihi</label>
		<input type="text" class="form-control" name="ALISTARIHI" value="@DateTime.Now.ToShortDateString()"/>
	</div>
	<div style="margin-top:15px">
		<label>Kitap Teslim Tarihi</label>
		<input type="text" class="form-control" name="IADETARIHI" value="@DateTime.Now.AddDays(7).ToShortDateString()" />
	</div>
	<div style="margin-top:15px;">
		<button class="btn btn-info">Kitabı Ödünç Ver</button>
		<input type="hidden" value="false" name="ISLEMDURUMU" />
	</div>
</form>

