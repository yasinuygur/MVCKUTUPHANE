@model MVCKUTUPHANE.Models.Entity.TBLUYE
@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
	<div>
		<label>Üye Adı</label>
