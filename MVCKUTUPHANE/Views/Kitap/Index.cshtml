@using MVCKUTUPHANE.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>
@using (Html.BeginForm("Index","Kitap",FormMethod.Post))
			{
				<div style="margin-bottom:15px; margin-top:15px;">
					<b>Aranacak Kitap Adını Giriniz: </b> @Html.TextBox("p")
					<input type="submit" value="Ara"/>
				</div>
			}

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>Kitap Adı</th>
		<th>Yazarı</th>
		<th>Kategorisi</th>
		<th>Basım Yılı</th>
		<th>Yayınevi</th>
		<th>Sayfa Sayısı</th>
		<th>Durum</th>
		<th>SİL</th>
		<th>GÜNCELLE</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.ID</td>
			<td>@item.AD</td>
			<td>@item.TBLYAZAR.AD &nbsp; @item.TBLYAZAR.SOYAD</td>
			<td>@item.TBLKATEGORI.AD </td>
			<td>@item.BASIMYIL</td>
			<td>@item.YAYINEVI</td>
			<td>@item.SAYFA</td>
			<td>@item.DURUM</td>
			<td><a href="/Kitap/KitapSil/@item.ID" class="btn btn-danger">SİL</a></td>
			<td><a href="/Kitap/KitapGetir/@item.ID" class="btn btn-success">GÜNCELLE</a></td>
		</tr>
	}
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-info">Yeni Kitap Ekle</a>